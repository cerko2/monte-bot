#!/bin/sh
#
# Configure options script for re-calling compilation
# options required to use the Magick++ library.
#
# Concept derived from gtk-config in the Gtk package except that Autoconf-style
# configuration information is presented instead so that it may be used more
# effictively in configure scripts.
#
usage='Usage: GraphicsMagick++-config [--cppflags] [--cxxflags] [--exec-prefix] [--ldflags] [--libs] [--prefix] [--version]

 For example, "example.cpp" may be compiled to produce "example" as follows:

  "c++ -o example example.cpp `GraphicsMagick++-config --cppflags --cxxflags --ldflags --libs`"'

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case $1 in
    --prefix)
      echo /usr/local/octmgw32_gcc-4.4.0-dw2
      ;;
    --exec-prefix)
      echo /usr/local/octmgw32_gcc-4.4.0-dw2
      ;;
    --version)
      echo 1.3.7
      ;;
    --cppflags)
      echo '-I/usr/local/octmgw32_gcc-4.4.0-dw2/include/GraphicsMagick -D_DLL' | sed -e "s+-I[^ ]*++g"
      ;;
    --cxxflags)
      echo '-D_GLIBCXX_DLL -march=i686 -mtune=generic -O3 -Wall'
      ;;
    --ldflags)
      echo '-L/usr/local/octmgw32_gcc-4.4.0-dw2/lib -shared-libgcc -L/usr/local/octmgw32_gcc-4.4.0-dw2/lib' | sed -e "s+-L[^ ]*++g"
      ;;
    --libs)
      echo '-lGraphicsMagick++ -lGraphicsMagick -ltiff -lfreetype -ljpeg -lpng -lwmflite -lbz2 -lz -lgdi32 -lm '
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

